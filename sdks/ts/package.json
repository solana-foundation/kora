    "@solana/kit": "^2.3.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.27",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.31.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
