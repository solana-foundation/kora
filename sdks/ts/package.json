{
  "name": "@kora/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Kora RPC",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
